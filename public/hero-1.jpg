<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1f2937;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#374151;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#111827;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#c48902;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#f4d03f;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c48902;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="800" height="600" fill="url(#heroGradient)"/>
  
  <!-- Decorative jewelry pattern -->
  <g opacity="0.1">
    <circle cx="150" cy="150" r="50" fill="none" stroke="url(#goldGradient)" stroke-width="2"/>
    <circle cx="650" cy="150" r="30" fill="none" stroke="url(#goldGradient)" stroke-width="2"/>
    <circle cx="200" cy="450" r="40" fill="none" stroke="url(#goldGradient)" stroke-width="2"/>
    <circle cx="600" cy="450" r="60" fill="none" stroke="url(#goldGradient)" stroke-width="2"/>
  </g>
  
  <!-- Main jewelry element -->
  <g transform="translate(400, 300)">
    <!-- Chain links -->
    <ellipse cx="0" cy="-80" rx="15" ry="25" fill="none" stroke="url(#goldGradient)" stroke-width="3"/>
    <ellipse cx="0" cy="-40" rx="15" ry="25" fill="none" stroke="url(#goldGradient)" stroke-width="3"/>
    <ellipse cx="0" cy="0" rx="15" ry="25" fill="none" stroke="url(#goldGradient)" stroke-width="3"/>
    <ellipse cx="0" cy="40" rx="15" ry="25" fill="none" stroke="url(#goldGradient)" stroke-width="3"/>
    <ellipse cx="0" cy="80" rx="15" ry="25" fill="none" stroke="url(#goldGradient)" stroke-width="3"/>
    
    <!-- Pendant -->
    <circle cx="0" cy="120" r="25" fill="none" stroke="url(#goldGradient)" stroke-width="3"/>
    <circle cx="0" cy="120" r="15" fill="url(#goldGradient)" opacity="0.3"/>
  </g>
  
  <!-- Text overlay -->
  <text x="400" y="400" text-anchor="middle" font-family="serif" font-size="18" fill="#c48902" opacity="0.5">Traditional Jewelry Collection</text>
</svg>
